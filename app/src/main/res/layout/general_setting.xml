<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/gen_heading"
        layout="@layout/setting_item_heading" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/showHiddenOption"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <include layout="@layout/setting_item_icon" />

                <include layout="@layout/setting_main_item" />

                <include layout="@layout/spacer_widget" />

                <include layout="@layout/switch_widget" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/showHdImageOption"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <include layout="@layout/setting_item_icon" />

                <include layout="@layout/setting_main_item" />

                <include layout="@layout/spacer_widget" />

                <include layout="@layout/switch_widget" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/enableTrashOption"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <include layout="@layout/setting_item_icon" />

                <include layout="@layout/setting_main_item" />

                <include layout="@layout/spacer_widget" />

                <include layout="@layout/switch_widget" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/enableDarkOption"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <include layout="@layout/setting_item_icon" />

                <include layout="@layout/setting_main_item" />

                <include layout="@layout/spacer_widget" />

                <include layout="@layout/switch_widget" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/choosePrimaryColorOption"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <include layout="@layout/setting_item_icon" />

                <include layout="@layout/setting_main_item" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/chooseAccentColorOption"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <include layout="@layout/setting_item_icon" />

                <include layout="@layout/setting_main_item" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/chooseLanguageOption"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <include layout="@layout/setting_item_icon" />

                <include layout="@layout/setting_main_item" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>