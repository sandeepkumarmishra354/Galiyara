<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/sec_heading"
        layout="@layout/setting_item_heading" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- app lock option -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/appLockOption"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <include layout="@layout/setting_item_icon"/>
                <include layout="@layout/setting_main_item"/>
                <include layout="@layout/spacer_widget"/>
                <include layout="@layout/switch_widget"/>
            </LinearLayout>

            <!-- individual lock option -->
            <!--LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/indLockOption"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">
                <include layout="@layout/setting_item_icon"/>
                <include layout="@layout/setting_main_item"/>
            </LinearLayout-->

        </LinearLayout>
    </FrameLayout>

</LinearLayout>